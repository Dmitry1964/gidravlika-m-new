mixin bkm-list()
  -
    const bkms = [
      {
        path: "bkm",
        image: "bkm-3350",
        format: "jpg",
        width: 218,
        height: 160,
        name: "Бурильно-крановая машина",
        title: "БКМ 3.350",
        base: "ГАЗ-С41",
        diameter: "до 0.80",
        type: "Мачтовый",
        lifting: "1500",
        dimensions: "6,89 × 2,34 × 2,57",
        href: "bkm-vipo3350.html",
        altText: "Изображение БКМ",
      },
      {
        path: "bkm",
        image: "bkm-6600",
        format: "jpg",
        width: 218,
        height: 160,
        name: "Бурильно-крановая машина",
        title: "БКМ 6.600",
        base: "ГАЗ-С41",
        diameter: "до 0.80",
        type: "Коленчатый",
        lifting: "1500",
        dimensions: "7,02 × 2,34 × 3,32",
        href: "bkm-vipo6600.html",
        altText: "Изображение БКМ",
      },


    ]
  section.section-list
    .container
      .section-list__wrapper
        h2.visually-hidden Автовышки
        +aside-menu-vipo()
        ul.catalog__list.catalog__list--vipo.catalog__list--start
          each item in bkms
            li.catalog__item
              .catalog__item-image
                +picture(item.path, item.image, item.format, item.width, item.height, item.altText)
                span=item.name
                h2.catalog__item-title=item.title
              .catalog__item-params
                dl
                  dt Модель шасси
                  dd=item.base
                  dt Тип установки
                  dd=item.type
                  dt Грузоподъемность
                  dd=item.lifting
                  dt Диаметр бурения
                  dd=item.diameter
                  dt Габариты
                  dd=item.dimensions


              +btn({text: "Подробнее", href: item.href})
