mixin info-chetra-tg122()
  -
    const images = [
      {
        path: "pipes-tg122",
        image: "tg122-isometry-front",
        format: "jpg",
        width: 680,
        height: 475,
        altText: "Изображение трубоукладчик ТГ122 ",
      },
      {
        path: "pipes-tg122",
        image: "tg122-front",
        format: "jpg",
        width: 680,
        height: 475,
        altText: "Изображение трубоукладчик ТГ122",
      },
      {
        path: "pipes-tg122",
        image: "tg122-right",
        format: "jpg",
        width: 680,
        height: 475,
        altText: "Изображение трубоукладчик ТГ122",
      },
      {
        path: "pipes-tg122",
        image: "tg122-left",
        format: "jpg",
        width: 680,
        height: 475,
        altText: "Изображение трубоукладчик ТГ122",
      },
      {
        path: "pipes-tg122",
        image: "tg122-back",
        format: "jpg",
        width: 680,
        height: 475,
        altText: "Изображение трубоукладчик ТГ122",
      },
      {
        path: "pipes-tg122",
        image: "tg122-isometry-back",
        format: "jpg",
        width: 680,
        height: 475,
        altText: "Изображение трубоукладчик ТГ122",
      },
    ]

  -const frontOptions = ['Стрела стандартная - длина 6,5 м', 'Стрела удлиненная - длина 9 м']
  -const options = ['Двойной стеклопакет кабины', 'Система спутникового мониторинга ГЛОНАСС/GPS','Зависимый и независимый отопитель кабины','Система предпускового подогрева двигателя','Температурное исполнение -50С +35С','Аудиосистема','Автоматический звуковой сигнал заднего хода','Звуковой сигнал переднего хода','Боковые зеркала заднего вида','Сиденье с микроподрессовыванием и пневмоподвеской']

  section.chetra-unit
    .container
      h2.visually-hidden Бульдозер Четра T40
      .chetra-unit__content
        .chetra-unit__slider.swiper
          .chetra-init__list.swiper-wrapper
            for item in images
              .chetra-unit__item.swiper-slide
                +picture(item.path, item.image, item.format, item.width, item.height, item.altText)
          .swiper-button-next(style={color: '#f3b411'})
          .swiper-button-prev(style={color: '#f3b411'})
          .swiper-pagination

        .chetra-unit__info
          h3.chetra-unit__info-title Основные характеристики
          dl.chetra-unit__info-list
            dt Модель двигателя:
            dd Cummins  ЯМЗ-236НБ-2 / Cummins QSB6,7
            dt Мощность номинальная, кВт (л.с.):
            dd 121 (165) / 121 (165)
            dt Мощность эксплуатационная, кВт (л.с.):
            dd 10 (150) / 110 (150)
            dt Эксплуатационная масса, т:
            dd от 23,5 до 26,3
            dt Max грузоподъемность, т
            dd 12,5 (плечо 2,5 м), 26,5 (плечо 1,22 м)
            dt Грузоподъемность
            dd 10,6 (плечо 2,5 м), 17,5 (плечо 1,22 м)
            dt Длина стрел
            dd 7 м, 9 м

          h3.chetra-unit__options-title Навесное оборудование
          ul.chetra-unit__front-options
            for item in frontOptions
              li=item
          h3.chetra-unit__options-title  Ширина башмака гусеницы, мм
          dl.chetra-unit__info-list
            dt Стандартная
            dd 610
            dt Мелиоративвная
            dd 810
          h3.chetra-unit__options-title Стандартная комплектация
          ul.chetra-unit__options
            for item in options
              li=item
